---
export interface Props {
  title: string;
  body: string;
  note?: string;
}
const { title, body, note } = Astro.props;
---
<article class="card">
  <h2>{title}</h2>
  <p style="margin-top:0.5rem;">{body}</p>
  {note ? <p class="text-small" style="margin-top:0.6rem;">{note}</p> : null}
</article>
