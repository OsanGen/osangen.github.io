---
const navItems = [
  { label: 'OSAN GAMES', href: '/labs' },
  { label: 'Modules', href: '/visual-classes' },
  { label: 'Workshops', href: '/workshops' },
  { label: 'Contribute', href: '/join' },
  { label: 'Resume', href: '/resume' },
];

const currentPath = Astro.url.pathname.replace(/\/$/, '') || '/';
---
<footer>
  <div class="container footer-shell">
    <nav class="footer-links" aria-label="Footer primary">
      {navItems.map((item) => {
        const isCurrent = item.href === '/'
          ? currentPath === '/'
          : currentPath.startsWith(item.href);
        return (
          <a href={item.href} aria-current={isCurrent ? 'page' : undefined}>
            {item.label}
          </a>
        );
      })}
    </nav>
    <p class="footer-note">One domain per quarter. Open research. Ethical AI. Free skills, donor-sustained.</p>
  </div>
</footer>
