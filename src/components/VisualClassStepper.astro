---
export interface Step {
  title: string;
  body: string;
  proofLink?: string;
  nextAction: string;
}
export interface Props {
  title: string;
  steps: Step[];
}
const { title, steps } = Astro.props;
---
<section class="card" aria-label="Visual class">
  <h2>{title}</h2>
  <ol style="margin-top:0.75rem;padding-left:1rem;display:grid;gap:0.75rem;">
    {steps.map((step) => (
      <li>
        <p><strong>{step.title}</strong></p>
        <p class="text-small">{step.body}</p>
        {step.proofLink ? <p class="text-small"><a href={step.proofLink}>Proof</a></p> : null}
        <p class="text-small">Next: {step.nextAction}</p>
      </li>
    ))}
  </ol>
</section>
