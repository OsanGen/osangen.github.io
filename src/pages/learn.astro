---
import BaseLayout from '../layouts/BaseLayout.astro';
import { loadModules } from '../lib/content';
import Card from '../components/Card.astro';
import CardGrid from '../components/CardGrid.astro';
import TagList from '../components/TagList.astro';

const modules = await loadModules();
---
<BaseLayout title="Learn - Oscar Sanchez" description="Visual classes and modules for open source AI">
  <h1>Learn</h1>
  <p class="text-small">Select a module and move from claim to proof.</p>
  <div class="catalog-shell">
    <CardGrid gap="var(--space-3)" align="start">
      {modules.map((module) => (
        <Card>
          <div class="catalog-card-stack">
            <h2>{module.title}</h2>
            <p class="text-small catalog-meta">{module.time} - {module.level}</p>
            <p class="text-small catalog-meta">{module.format}</p>
            <TagList tags={module.topics} compact maxItems={3} />
            <a class="button button--primary catalog-cta" href={module.cta.href}>{module.cta.label}</a>
          </div>
        </Card>
      ))}
    </CardGrid>
  </div>
</BaseLayout>
