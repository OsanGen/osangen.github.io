---
import BaseLayout from '../layouts/BaseLayout.astro';
import { loadModules } from '../lib/content';
import Card from '../components/Card.astro';
import CardGrid from '../components/CardGrid.astro';
import TagList from '../components/TagList.astro';

const modules = await loadModules();
---
<BaseLayout title="Learn - Oscar Sanchez" description="Visual classes and modules for open source AI">
  <h1>Learn</h1>
  <p class="text-small">Select a module and move from claim to proof.</p>
  <div style="margin-top:1rem;">
    <CardGrid>
      {modules.map((module) => (
        <Card>
          <h2>{module.title}</h2>
          <p class="text-small" style="margin-top:0.5rem;">{module.time} - {module.level}</p>
          <p class="text-small">{module.format}</p>
          <TagList tags={module.topics} />
          <a class="button" style="margin-top:0.8rem;" href={module.cta.href}>{module.cta.label}</a>
        </Card>
      ))}
    </CardGrid>
  </div>
</BaseLayout>
